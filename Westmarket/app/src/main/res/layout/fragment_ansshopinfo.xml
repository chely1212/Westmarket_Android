                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="24dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.05"></RelativeLayout>

