                            android:layout_height="160dip">

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.05"></RelativeLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2">

                                <TextView
